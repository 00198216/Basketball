<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uca.basketball_counter.MainActivity">

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/B"
        android:layout_marginBottom="140dp"
        android:background="#000"
        android:layout_centerInParent="true"/>




    <TextView
        android:id="@+id/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team A"

        android:textSize="25sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginTop="50dp"
        android:text="Team B"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/NumberA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/NumberB"
        android:layout_alignBottom="@+id/NumberB"
        android:layout_alignLeft="@+id/A"
        android:layout_alignStart="@+id/A"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="0"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/NumberB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@+id/B"
        android:layout_alignStart="@+id/B"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:textSize="30dp"
        android:layout_alignLeft="@+id/B" />

    <Button
        android:id="@+id/oneA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/oneB"
        android:layout_alignBottom="@+id/oneB"
        android:layout_alignEnd="@+id/A"
        android:layout_alignRight="@+id/A"
        android:text="+1" />

    <Button
        android:id="@+id/oneB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1"
        android:layout_below="@+id/B"
        android:layout_alignStart="@+id/B"
        android:layout_marginTop="100dp"
        android:layout_alignLeft="@+id/B" />

    <Button
        android:id="@+id/TwoA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/TwoB"
        android:layout_alignBottom="@+id/TwoB"
        android:layout_alignLeft="@+id/oneA"
        android:layout_alignStart="@+id/oneA"
        android:text="+2" />

    <Button
        android:id="@+id/TwoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2"
        android:layout_below="@+id/B"
        android:layout_alignStart="@+id/B"
        android:layout_marginTop="170dp"

        android:layout_alignLeft="@+id/B" />

    <Button
        android:id="@+id/ThreeA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/Reset"
        android:layout_alignLeft="@+id/TwoA"
        android:layout_alignStart="@+id/TwoA"
        android:text="+3" />

    <Button
        android:id="@+id/ThreeB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3"
        android:layout_below="@+id/B"
        android:layout_alignStart="@+id/B"
        android:layout_marginTop="245dp"

        android:layout_alignLeft="@+id/B" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/ThreeB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="Reset" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered By Sebastian"
        android:layout_marginTop="470dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
